@{
    Layout = "_LayoutAdministrator";
    ViewData["title"] = "Excluir Livro";
}

<div class="container p-4 rounded-4">

    <div class="mb-5  text-center">
        <h1 >Exluir Livro</h1>
    </div>

    <form >

        <input type="hidden"  />
        <h2 >Tem Certeza de que deseja excluir o Livro abaixo?</h2>

        <div class="mb-3">
            <label for="titulo" class="form-label ">Titulo: </label>
            <input type="text" class="form-control"  id="Titulo" disabled>
            


        </div>

        <div class="mb-3">
            <label for="autor" class="form-label ">Autor: </label>
            <input type="text" class="form-control"  id="autor" disabled>
            


        </div>

        <div class="mb-3">
            <label for="quantidade" class="form-label ">Quantidade: </label>
            <input type="text" class="form-control"  id="Quantidade" disabled>
           


        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Exluir</button>
            <a class="btn btn-primary w-50" asp-controller="Administrator" asp-action="ListaAlunos" role="button">Voltar</a>
        </div>

    </form>

</div>

