@{
    Layout = "_LayoutAdministrator";
    ViewData["title"] = "Adcionar Livro";
}

<div class="container p-4 rounded-4">

    <div class="mb-5  text-center">
        <h1>Adicionar Livro</h1>
    </div>

    <form class="row g-3">

        <div class="col-md-6">
            <label for="titulo" class="form-label ">Titulo: </label>
            <input type="text" class="form-control" id="Titulo" >



        </div>

        <div class="col-md-6">
            <label for="autor" class="form-label ">Autor: </label>
            <input type="text" class="form-control" id="autor" >



        </div>
        <div class="col-md-6">
            <label for="quantidade" class="form-label ">Quantidade: </label>
            <input type="text" class="form-control" id="Quantidade">



        </div>
        <div class="col-md-6">
            <label for="numeroDePaginas" class="form-label ">Numero De Paginais: </label>
            <input type="text" class="form-control" id="numeroDePaginas">



        </div>

        <div class="col-md-6">
            <label for="DataDeLancamento" class="form-label ">Data De Lancamento </label>
            <input type="date" class="form-control" id="DataDeLancamento">



        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adiciona</button>
            <a class="btn btn-primary w-50" asp-controller="Administrator" asp-action="Index" role="button">Voltar</a>
        </div>

    </form>

</div>
