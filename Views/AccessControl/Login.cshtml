@{
    Layout = "_Layout";
    ViewData["Title"] = "Autenticação | SAGEB";
}

@model sageb.Controllers.AccessControl.LoginModel

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <link href="~/css/login.css" rel="stylesheet" />
  
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary bg-dark">
    <main class="w-100 m-auto form-container p-4">

        <form asp-controller="AccessControl" asp-action="ProcessLogin" method="post">
            
            <img src="~/img/bootstrap-logo.svg" class="mb-4" height="57" width="72" />
            <h1 class="h3 mb-3 fw-normal text-light">Please sign in</h1>
            <div class="form-floating mb-3">
                <input type="email" asp-for="Email" value="admin@ustm.com" class="form-control" id="floatingInput" placeholder="your-email@gmail.com" />
                <label for="floatingInput">E-mail</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="password" asp-for="Password" value="admin.sageb" class="form-control " id="floatingInput" placeholder="password" />
                <label for="floatingInput">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check text-start my-3">
                <input type="checkbox" asp-for=RememberMe class="form-check-input" id="flexCheckDefault" />
                <label class="form-check-label text-light" for="flexCheckDefault">Remenber me</label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">Sigin in</button>
        </form>

    </main>

</body>
</html>
